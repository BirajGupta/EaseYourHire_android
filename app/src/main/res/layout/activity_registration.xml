<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">


    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:background="#fff"
        android:hint="NAME(MIN 3 CHAR)"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="#fff"
        android:hint="AGE"
        android:inputType="number"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="#fff"
        android:hint="MOBILE NUMBER(10)"
        android:inputType="phone"
        android:maxLength="10"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="@color/black"
        />

    <Spinner
        android:id="@+id/occupation1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/mobile"
        android:entries="@array/occupation_arrays"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="#fff"
        android:spinnerMode="dialog"
        android:prompt="@string/display"

        android:padding="10dp"
        android:textColor="@color/black"
        />
    <Spinner
        android:id="@+id/occupation2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/occupation1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="#fff"

        android:spinnerMode="dialog"
        android:prompt="@string/display"
        android:entries="@array/occupation_arrays"

        android:padding="10dp"
        android:textColor="@color/black"
        />
    <Spinner
        android:id="@+id/occupation3"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/occupation2"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="#fff"

        android:spinnerMode="dialog"
        android:entries="@array/occupation_arrays"
        android:prompt="@string/display"
        android:padding="10dp"

        />
    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/occupation3"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="#fff"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/conpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="#fff"
        android:hint="COFIRM PASSWORD"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conpass"
        android:layout_marginTop="40dp"
        android:background="#DF0101"
        android:text="REGISTER"
        android:textColor="#fff"
        android:textSize="20sp" />


</RelativeLayout>
