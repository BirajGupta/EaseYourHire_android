<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyProfileActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars"
        android:id="@+id/imgProImage"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name :"
        android:id="@+id/txtNameEmpProfile"
        android:layout_below="@id/imgProImage"
        android:textSize="17sp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="#000"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@id/txtNameEmpProfile"
        android:layout_height="wrap_content"
        android:text="Age :"
        android:id="@+id/txtAgeEmpProfile"
        android:textSize="17sp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="#000"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number :"
        android:layout_below="@id/txtAgeEmpProfile"
        android:id="@+id/txtNumberEmpProfile"
        android:textSize="17sp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="#000"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available jobs :"
        android:layout_below="@id/txtNumberEmpProfile"
        android:id="@+id/txtJobEmpProfile"
        android:textSize="25sp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        />






</RelativeLayout>