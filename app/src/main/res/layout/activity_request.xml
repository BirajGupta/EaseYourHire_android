<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:layout_height="match_parent"
    tools:context=".RequestActivity">
    <EditText
        android:id="@+id/txtname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:hint="ENTER YOUR NAME"
         android:textColor="#000"
        android:inputType="textPersonName"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:padding="15dp"
        />
    <EditText
        android:id="@+id/txtmobile"
        android:inputType="phone"
        android:layout_below="@+id/txtname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="CONTACT NUMBER(10)"
        android:textColor="#000"
        android:maxLines="1"
        android:maxLength="10"
      android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        />
    <EditText
        android:id="@+id/txtrequirement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="REQUIREMENT"
        android:textColor="#000"
        android:layout_below="@+id/txtmobile"
        android:inputType="textPersonName"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:padding="15dp"
        />
   <EditText
    android:id="@+id/txtlocation"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="ENTER WORK LOCATION"
    android:textColor="#000"
    android:layout_below="@+id/txtrequirement"
    android:inputType="textPostalAddress"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="50dp"
    android:padding="15dp"
    />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="GENERATE REQUEST"
        android:padding="15dp"
        android:layout_below="@+id/txtlocation"

        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>