<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:weightSum="10"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgPersonImage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_weight="2"
            android:src="@drawable/profile" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="128dp"
            android:layout_weight="8">
            <TextView
                android:id="@+id/txtPersonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Name"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginLeft="12dp"/>
            <TextView
                android:id="@+id/txtPersonoccupation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Occupation"
                android:layout_below="@id/txtPersonName"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginLeft="12dp"/>



            <TextView
                android:drawableLeft="@drawable/ic_call"
                android:id="@+id/txtPersonNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7006641234"
                android:layout_alignParentBottom="true"
                android:textColor="#000000"
                android:layout_below="@id/txtPersonoccupation"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"
                android:gravity="center"/>

            <TextView

                android:id="@+id/txtPersonMerit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 star"

                android:layout_marginRight="25dp"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:layout_marginTop="12dp"/>

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>